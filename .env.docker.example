# ==========================================
# Variables de Entorno para Docker
# Copiar este archivo como .env y configurar los valores
# ==========================================

# Database
DB_ROOT_PASSWORD=tu_root_password_seguro
DB_NAME=tecsup_rooms
DB_USERNAME=tecsup_user
DB_PASSWORD=tu_password_seguro

# JWT (generar un secret seguro)
JWT_SECRET=tu_jwt_secret_muy_largo_y_seguro_de_al_menos_32_caracteres
JWT_EXPIRES_IN=7d

# Google OAuth2 (obtener de Google Cloud Console)
GOOGLE_CLIENT_ID=tu-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu-client-secret
GOOGLE_CALLBACK_URL=https://tu-dominio.com/auth/google/callback

# URLs
FRONTEND_URL=https://tu-dominio.com
LOGIN_URL_PROD=https://tu-dominio.com/auth/google

# AWS S3 (tus credenciales actuales)
AWS_ACCESS_KEY_ID=tu-access-key
AWS_SECRET_ACCESS_KEY=tu-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=tecsup-rooms-media
AWS_S3_BASE_URL=https://tecsup-rooms-media.s3.us-east-1.amazonaws.com

# Email (Gmail con App Password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=tu-email@gmail.com
EMAIL_PASS=tu-app-password

# Google Gemini AI
GOOGLE_API_KEY=tu-gemini-api-key
GEMINI_MODEL_NAME=gemini-2.5-flash

# Storage
MAX_IMAGE_SIZE_MB=100
